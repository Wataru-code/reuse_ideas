<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to "一覧", ideas_path, class: "btn btn-outline-dark" %>
    <%= link_to "編集", edit_idea_path(@idea), class: "btn btn-outline-dark" %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>

<%= render partial: "idea", locals: { idea: @idea } %>

<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to "削除", idea_path, class: "btn btn-danger", method: :delete, data: {confirm: "削除して大丈夫ですか？"} %>
  </div>
</div>

<div class="p-comment__list">
  <div class="p-comment_listTitle">コメント</div>
  <%= render @idea.comments %>
</div>

<%= render partial: 'comments/form', locals: { comment: @comment } %>