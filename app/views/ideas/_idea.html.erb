<div class="card">
  <div class="card-header">
    <h4><%= idea.title %></h4>
    <% idea.tags.each do |tag| %>
      <span class="badge badge-primary"><%= tag.name %></span>
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(idea.content) %></p>
    <p class="text-right font-weight-bold mr-10"><%= idea.user_name %></p>
  </div>
</div>
